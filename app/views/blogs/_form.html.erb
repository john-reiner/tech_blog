<%= form_for @blog do |f| %>

    <div class="form-group">
        <%= f.label :name, "Name" %>
        <%= f.text_field :name, class: "form-control" %>    
    </div>

    <div class="form-group">
        <%= f.label :body %>
        <%= f.text_area :body, class: "form-control" %>
    </div>
    
    <div class="form-group">
        <%= f.label :technology_topic_id, "Tech Topic" %>
        <%= f.collection_select(:technology_topic_id, TechnologyTopic.all, :id, :name, {class: 'form-control ' }) %>
    </div>

    <div>
        <%= f.submit 'Post', class: "btn btn-outline-secondary" %>
    </div>

<% end %>